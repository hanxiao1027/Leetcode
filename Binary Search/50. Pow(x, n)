class Solution {
    public double myPow(double x, int n) {
        
        if(n == 0) return 1.0;
        return fastPow(x, n);
    }
    private double fastPow(double x, int n){
        if(n == 0) return 1.0;
        if(n < 0){
            x = 1 / x;
            n *= -1;
        }
        if(n < 0) n = Integer.MAX_VALUE - 1;
        double newX = x * x;
        if(n % 2 == 1){
            return fastPow(newX, n / 2) * x;
        }
        else return fastPow(newX, n / 2);
    }
}
